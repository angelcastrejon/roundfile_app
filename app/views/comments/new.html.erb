<h1><%= @title %></h1>

<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  
  <div class="field">
	<%= f.hidden_field :userid, :value => current_user.id %>
	</div>
  <div class="field">
	<%= f.hidden_field :resumeid, :value => params[:id] %>
	</div>

  
  <div class="actions">
    <%= f.submit "Submit Comment", :disable_with => "Submitting..." %>
  </div>
<% end %>
